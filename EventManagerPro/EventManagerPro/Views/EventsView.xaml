                        <StackPanel>
                            <TextBlock FontWeight="Bold">Budget Overflow!</TextBlock>
                            <TextBlock>Oops! Looks like you have busted your budget! Remove some items or increase your budget by editing your event.</TextBlock>
                        </StackPanel>
                    </Viewbox.ToolTip>
                </Viewbox>
        </DataTemplate>
